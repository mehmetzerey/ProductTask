
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Customer/Views/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">

        <div class="card card-outline card-primary">
            <div class="card-header text-center">
            </div>
            <div class="card-body">
                <p class="login-box-msg">Ticket Aç</p>

                <form id="ticket-create-form">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Name" id="Subject" name="Subject">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <textarea class="form-control" placeholder="Mesaj" id="Message" name="Message"></textarea>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Ekle</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </section>
</div>
@section Scripts{
    <script src="~/js/TicketCreate.js"></script>
}
